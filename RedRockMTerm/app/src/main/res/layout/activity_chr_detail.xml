            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/color_round"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/chr_imageView_6"
            app:layout_constraintHorizontal_bias="0.489"
            app:layout_constraintStart_toEndOf="@+id/chr_imageView_4"
            app:layout_constraintTop_toBottomOf="@+id/chr_imageView_3"
            app:layout_constraintVertical_bias="0.518" />

        <ImageView
            android:id="@+id/chr_imageView_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
