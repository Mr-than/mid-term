        android:layout_height="123dp"
        android:layout_marginTop="14dp"
        app:cardElevation="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chr_textView">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/chr_card_r"
            android:layout_width="342dp"
            android:layout_height="123dp"
            android:background="#BEE0D0">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="甲"
                android:textColor="#333333"
                android:textSize="80dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.893"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/chr_detail_hex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HEX"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.05"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/chr_detail_rgb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RGB"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.05"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/chr_detail_hex" />

            <TextView
                android:id="@+id/chr_detail_cmky"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CMYK"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.052"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/chr_detail_rgb" />

            <TextView
                android:id="@+id/chr_textView_hex_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#3A846B"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.05"
                app:layout_constraintStart_toEndOf="@+id/chr_detail_hex"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/chr_textView_rgb_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="58, 132, 107"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.054"
                app:layout_constraintStart_toEndOf="@+id/chr_detail_rgb"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.692" />

            <TextView
                android:id="@+id/chr_textView_cmky_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="56, 0, 19, 48"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.075"
                app:layout_constraintStart_toEndOf="@+id/chr_detail_cmky"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.875" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="渐变示例"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />


    <androidx.constraintlayout.widget.ConstraintLayout
