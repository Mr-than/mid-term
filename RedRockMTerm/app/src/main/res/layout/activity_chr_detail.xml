        <TextView
            android:id="@+id/chr_bottom_textView11"
            android:layout_width="100dp"
            android:layout_height="36dp"
            android:background="#1B5D3C"
            android:gravity="right|bottom"
            android:text="丙"
            android:textColor="@color/white"
            android:textSize="25dp"
