            app:layout_constraintTop_toBottomOf="@+id/chr_bottom_textView11" />

        <TextView
            android:id="@+id/chr_bottom_textView3_hex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="#1B5D3C"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chr_bottom_textView3" />

        <TextView
            android:id="@+id/chr_bottom_textView6"
            android:layout_width="100dp"
