        <ImageView
            android:id="@+id/chr_imageView_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:background="@drawable/color_round"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/chr_imageView_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/color_round"
            app:layout_constraintEnd_toStartOf="@+id/chr_imageView_3"
            app:layout_constraintHorizontal_bias="0.489"
            app:layout_constraintStart_toEndOf="@+id/chr_imageView_1"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/chr_imageView_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="16dp"
