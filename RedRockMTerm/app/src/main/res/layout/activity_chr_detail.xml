            app:layout_constraintEnd_toStartOf="@+id/chr_bottom_textView4"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintStart_toEndOf="@+id/chr_bottom_textView3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.149" />

        <TextView
            android:id="@+id/chr_bottom_textView11_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#1B5D3C"
            app:layout_constraintEnd_toStartOf="@+id/chr_bottom_textView4_value"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toEndOf="@+id/chr_bottom_textView3_hex"
            app:layout_constraintTop_toBottomOf="@+id/chr_bottom_textView11" />

        <TextView
            android:id="@+id/chr_bottom_textView4"
            android:layout_width="100dp"
            android:layout_height="36dp"
            android:layout_marginEnd="12dp"
            android:background="#1B5D3C"
            android:gravity="right|bottom"
            android:text="丁"
            android:textColor="@color/white"
            android:textSize="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
