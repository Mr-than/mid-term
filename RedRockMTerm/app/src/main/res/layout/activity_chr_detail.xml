            android:layout_marginBottom="16dp"
            android:text="#1B5D3C"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/chr_bottom_textView5_value"
            app:layout_constraintTop_toBottomOf="@+id/chr_bottom_textView12"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/chr_bottom_textView12"
            android:layout_width="100dp"
            android:layout_height="36dp"
            android:background="#1B5D3C"
            android:gravity="right|bottom"
            android:text="己"
            android:textColor="@color/white"
            android:textSize="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/chr_bottom_textView6"
